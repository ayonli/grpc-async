{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "newLine": "LF",
        "importHelpers": true,
        "moduleResolution": "NodeNext",
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        // "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "paths": {
            "@ayonli/grpc-async": [
                "."
            ]
        }
    },
    "include": [
        "*.ts",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
            "target": "es2018",
            "rootDir": "test/"
        }
    }
}
